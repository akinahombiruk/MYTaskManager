@model IEnumerable<MYTaskManager.Models.TaskAttachment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UploadedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Task)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UploadedByNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Task.TaskId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadedByNavigation.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AttachmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AttachmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AttachmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
