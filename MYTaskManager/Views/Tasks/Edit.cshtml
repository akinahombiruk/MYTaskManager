@model MYTaskManager.Models.Task

@{
    ViewData["Title"] = "Edit Task";
}

<style>
    body {
        background-color: #f8f5f2;
    }

    .task-card {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(101, 67, 33, 0.15);
        padding: 30px;
        border-top: 6px solid #8b5e3c;
    }

    .task-header {
        color: #6f4e37;
        font-weight: 700;
    }

    .form-label {
        font-weight: 600;
        color: #5a3e2b;
    }

    .form-control, .form-select {
        border-radius: 8px;
        border: 1px solid #d3c2b2;
    }

        .form-control:focus, .form-select:focus {
            border-color: #8b5e3c;
            box-shadow: 0 0 0 0.15rem rgba(139, 94, 60, 0.25);
        }

    .btn-brown {
        background-color: #8b5e3c;
        color: #fff;
        border-radius: 8px;
        padding: 10px 22px;
        font-weight: 600;
        border: none;
    }

        .btn-brown:hover {
            background-color: #6f4e37;
            color: #fff;
        }

    .back-link {
        color: #6f4e37;
        font-weight: 500;
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="task-card">

                <h2 class="task-header mb-1">Edit Task</h2>
                <p class="text-muted mb-4">Update task details</p>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="TaskId" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="ProjectId" class="form-label"></label>
                            <select asp-for="ProjectId" class="form-select" asp-items="ViewBag.ProjectId"></select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="StatusId" class="form-label"></label>
                            <select asp-for="StatusId" class="form-select" asp-items="ViewBag.StatusId"></select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="AssignedTo" class="form-label"></label>
                            <select asp-for="AssignedTo" class="form-select" asp-items="ViewBag.AssignedTo"></select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="CreatedBy" class="form-label"></label>
                            <select asp-for="CreatedBy" class="form-select" asp-items="ViewBag.CreatedBy"></select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="PriorityId" class="form-label"></label>
                            <select asp-for="PriorityId" class="form-select" asp-items="ViewBag.PriorityId"></select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DueDate" class="form-label"></label>
                            <input asp-for="DueDate" type="date" class="form-control" />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="CreatedAt" class="form-label"></label>
                            <input asp-for="CreatedAt" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="UpdatedAt" class="form-label"></label>
                            <input asp-for="UpdatedAt" class="form-control" />
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="back-link">← Back to List</a>
                        <button type="submit" class="btn btn-brown">Save Changes</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
