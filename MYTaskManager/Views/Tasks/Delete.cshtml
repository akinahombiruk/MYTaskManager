@model MYTaskManager.Models.Task

@{
    ViewData["Title"] = "Delete Task";
}

<style>
    body {
        background-color: #f8f5f2;
    }

    .task-card {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(101, 67, 33, 0.15);
        padding: 30px;
        border-top: 6px solid #8b5e3c;
        max-width: 800px;
        margin: auto;
    }

    .task-header {
        color: #6f4e37;
        font-weight: 700;
        margin-bottom: 20px;
    }

    dl.row dt {
        font-weight: 600;
        color: #5a3e2b;
    }

    dl.row dd {
        margin-bottom: 12px;
    }

    .btn-brown {
        background-color: #8b5e3c;
        color: #fff;
        border-radius: 8px;
        padding: 8px 18px;
        font-weight: 600;
        text-decoration: none;
        margin-right: 10px;
    }

        .btn-brown:hover {
            background-color: #6f4e37;
            color: #fff;
        }

    .btn-danger {
        background-color: #c0392b;
        color: #fff;
        border-radius: 8px;
        padding: 8px 18px;
        font-weight: 600;
        border: none;
    }

        .btn-danger:hover {
            background-color: #922b21;
            color: #fff;
        }
</style>

<div class="container mt-5">
    <div class="task-card">
        <h2 class="task-header">Delete Task</h2>
        <p class="text-muted mb-4">Are you sure you want to delete this task?</p>

        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Due Date</dt>
            <dd class="col-sm-9">@Model.DueDate?.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-9">@Model.CreatedAt?.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Updated At</dt>
            <dd class="col-sm-9">@Model.UpdatedAt?.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Assigned To</dt>
            <dd class="col-sm-9">@Model.AssignedToNavigation?.UserId</dd>

            <dt class="col-sm-3">Created By</dt>
            <dd class="col-sm-9">@Model.CreatedByNavigation?.UserId</dd>

            <dt class="col-sm-3">Priority</dt>
            <dd class="col-sm-9">@Model.Priority?.PriorityId</dd>

            <dt class="col-sm-3">Project</dt>
            <dd class="col-sm-9">@Model.Project?.ProjectId</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status?.StatusId</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="TaskId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn-brown">Back to List</a>
        </form>
    </div>
</div>
